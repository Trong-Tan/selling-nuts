generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User {
  id          String         @id @default(cuid())
  firstName   String?
  lastName    String?
  email       String         @unique
  age         Int?
  avatar      String?
  phone       String?
  password    String
  carts Cart[]
  
  @@map("users")
}
model Product {
  id          String         @id @default(cuid())
  name   String?             
  price    Int?
  discountPrice       Int?         
  numRatings         Int?
  imageUrl      String?
  
  @@map("products")
}

model Cart {
  id          String         @id @default(cuid())
  user        User?       @relation(fields: [userId], references: [id])
  userId      String?
  productId   String?             
  productName   String?             
  price    Int?
  discountPrice       Int?         
  numRatings         Int?
  imageUrl      String?
  quantity      Int?
  
  @@index([userId])
  @@map("carts")
}